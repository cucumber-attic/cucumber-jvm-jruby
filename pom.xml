<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>info.cukes</groupId>
        <artifactId>cucumber-jvm</artifactId>
        <relativePath>../pom.xml</relativePath>
        <version>1.0.0.RC5-SNAPSHOT</version>
    </parent>

    <artifactId>cucumber-jruby</artifactId>
    <packaging>jar</packaging>
    <name>Cucumber-JVM: JRuby</name>

    <dependencies>
        <dependency>
            <groupId>info.cukes</groupId>
            <artifactId>cucumber-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jruby</groupId>
            <artifactId>jruby-complete</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>info.cukes</groupId>
            <artifactId>cucumber-junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.sonatype.plugins</groupId>
                <artifactId>jarjar-maven-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jarjar</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>info.cukes:cucumber-core</include>
                                <include>info.cukes:gherkin</include>
                                <include>com.google.code.gson:gson</include>
                                <include>com.googlecode.java-diff-utils:diffutils</include>
                                <include>com.thoughtworks.xstream:xstream</include>
                            </includes>
                            <input>target/classes</input>
                            <output>target/jarjar-out</output>
                            <rules/>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-full</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <!-- build a jar out of the jarjar stuff -->
                                <jar destfile="target/${project.build.finalName}-full.jar"
                                     basedir="target/jarjar-out"/>

                                <!-- drop it in the lib directory for great justice -->
                                <copy file="${project.build.directory}/${project.build.finalName}-full.jar"
                                      tofile="${basedir}/lib/cucumber-jruby-full.jar"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jruby-cli</id>
                        <phase>test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <!-- also run the CLI test to ensure that stuff works via the CLI as well -->
                                <echo message="Running jruby tests via the CLI..."/>
                                <java jar="${maven.dependency.org.jruby.jruby-complete.jar.path}"
                                      fork="true"
                                      failonerror="true"
                                      newenvironment="true"
                                      maxmemory="512m">
                                    <arg value="-S"/>
                                    <arg value="bin/cucumber-jvm"/>
                                    <arg value="--glue"/>
                                    <arg value="src/test/resources"/>
                                    <arg value="src/test/resources"/>
                                </java>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>publish-gem</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <!-- build the gem file using jruby -->
                                        <echo message="Building Gem"/>
                                        <java jar="${maven.dependency.org.jruby.jruby-complete.jar.path}"
                                              failonerror="true">
                                            <arg value="-S"/>
                                            <arg value="gem"/>
                                            <arg value="build"/>
                                            <arg value="cucumber-jvm.gemspec"/>
                                        </java>
                                        <!-- publish the gem to the right spot -->
                                        <echo message="Publishing Gem"/>
                                        <java jar="${maven.dependency.org.jruby.jruby-complete.jar.path}"
                                              failonerror="true">
                                            <arg value="-S"/>
                                            <arg value="gem"/>
                                            <arg value="push"/>
                                            <arg value="cucumber-jvm${project.parent.version}.gemspec"/>
                                        </java>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>
